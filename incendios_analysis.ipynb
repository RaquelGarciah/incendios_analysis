# ## 5. Configuraci√≥n Base del Mapa

# %%
# Funci√≥n para crear mapa base
def crear_mapa_base(lat_center=None, lon_center=None, zoom_start=6):
    """
    Crear un mapa base centrado en una ubicaci√≥n espec√≠fica o en el centro de los datos
    """
    if lat_center is None or lon_center is None:
        # Calcular centro basado en los datos
        lat_center = df_clean['latitude'].mean()
        lon_center = df_clean['longitude'].mean()
    
    # Crear mapa base con diferentes tipos de tiles
    mapa_base = folium.Map(
        location=[lat_center, lon_center],
        zoom_start=zoom_start,
        control_scale=True,
        tiles=None  # No usar tiles por defecto, los agregaremos como capas
    )
    
    # Agregar diferentes tipos de tiles como capas base
    tile_layers = {
        "OpenStreetMap": folium.TileLayer('openstreetmap'),
        "CartoDB Positron": folium.TileLayer('cartodbpositron'),
        "CartoDB Dark Matter": folium.TileLayer('cartodbdark_matter'),
        "Stamen Terrain": folium.TileLayer('stamenterrain'),
        "Stamen Toner": folium.TileLayer('stamentoner'),
    }
    
    # Agregar todas las capas base
    for name, layer in tile_layers.items():
        layer.add_to(mapa_base)
    
    # Establecer OpenStreetMap como capa por defecto
    tile_layers["OpenStreetMap"].add_to(mapa_base)
    
    # Agregar control de capas base
    folium.LayerControl(collapsed=False).add_to(mapa_base)
    
    return mapa_base

# Crear un mapa base para referencia
print("=== CONFIGURACI√ìN DEL MAPA BASE ===")
