    elif categoria == 'Alta':
        grupo = alta_group
        color = 'red'
        contadores_intensidad['Alta'] += 1
    else:
        continue
    
    # Crear popup espec√≠fico para intensidad
    popup_text = f"""
    <b>Informaci√≥n del Incendio</b><br>
    <hr>
    <b>Intensidad:</b> {categoria}<br>
