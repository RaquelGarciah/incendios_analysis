# Funci√≥n para crear icono de fuego con color espec√≠fico
def crear_icono_fuego(color):
    """Crear icono de fuego con color espec√≠fico"""
    icon_url = f'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-{color}.png'
    
    # Para colores personalizados, usar estos √≠conos base
    color_map = {
        'red': {'color': '#ff0000', 'icon': 'fire', 'prefix': 'fa'},
        'orange': {'color': '#ff9900', 'icon': 'fire', 'prefix': 'fa'},
        'yellow': {'color': '#ffff00', 'icon': 'fire', 'prefix': 'fa'},
    }
    
    if color in color_map:
        return folium.Icon(
            color=color,
            icon=color_map[color]['icon'],
            prefix=color_map[color]['prefix']
        )
    else:
        # Icono por defecto
        return folium.Icon(
            color=color,
            icon='fire',
            prefix='fa'
        )

