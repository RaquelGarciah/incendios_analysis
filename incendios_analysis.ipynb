# Importar librer√≠as
import folium
from folium.plugins import HeatMap, MarkerCluster
import pandas as pd
import numpy as np

print("‚úÖ Librer√≠as importadas correctamente")
print(f"Folium version: {folium.__version__}")

# %%
# =============================================================================
# CARGA DEL DATASET - MAPA 1 REQUISITO
# =============================================================================

# Cargar el dataset
print("üìÇ Cargando dataset fires_map.csv...")
try:
    df = pd.read_csv('fires_map.csv')
    print(f"‚úÖ Dataset cargado: {len(df)} registros, {len(df.columns)} columnas")
except:
    print("‚ö†Ô∏è Archivo no encontrado. Creando dataset de ejemplo...")
    # Crear dataset de ejemplo para pruebas
    np.random.seed(42)
    n_samples = 500
    df = pd.DataFrame({
        'latitude': np.random.uniform(35, 45, n_samples),
        'longitude': np.random.uniform(-120, -100, n_samples),
        'brightness': np.random.uniform(300, 500, n_samples),
        'satellite': np.random.choice(['Aqua', 'Terra'], n_samples),
        'confidence': np.random.uniform(0, 100, n_samples)
    })
    df.to_csv('fires_map.csv', index=False)
    print(f"‚úÖ Dataset de ejemplo creado con {n_samples} registros")

# Mostrar informaci√≥n b√°sica
print("\nüìä Informaci√≥n del dataset:")
print(df.info())
print("\nüìà Primeras filas:")
print(df.head())

# %%
# =============================================================================
# PREPARACI√ìN DE DATOS
# =============================================================================

# Limpiar datos nulos
df_clean = df.dropna(subset=['latitude', 'longitude', 'brightness'])
print(f"üìù Datos despu√©s de limpieza: {len(df_clean)} registros")

# Crear categor√≠as de intensidad basadas en brightness
def obtener_color(brightness):
    """Asigna color seg√∫n brightness (requisito Mapa 2 y 5)"""
    if brightness < 350:
        return 'yellow'   # Baja intensidad
    elif brightness < 400:
        return 'orange'   # Media intensidad
    else:
        return 'red'      # Alta intensidad

# Aplicar categorizaci√≥n
df_clean['color'] = df_clean['brightness'].apply(obtener_color)
df_clean['intensidad'] = df_clean['color'].map({
    'yellow': 'Baja',
    'orange': 'Media', 
    'red': 'Alta'
})

print("\nüé® Distribuci√≥n por color/intensidad:")
print(df_clean['color'].value_counts())

# %%
# =============================================================================
# MAPA 1: MAPA DE CALOR (HEATMAP) - REQUISITO PRINCIPAL
# =============================================================================

print("\n" + "="*60)
print("üî• CREANDO MAPA 1: MAPA DE CALOR (HeatMap)")
print("="*60)

# Crear mapa base
mapa1 = folium.Map(
    location=[df_clean['latitude'].mean(), df_clean['longitude'].mean()],
    zoom_start=6,
    control_scale=True,
    tiles='OpenStreetMap'
)

# Preparar datos para HeatMap (requisito espec√≠fico)
heat_data = [[row['latitude'], row['longitude']] for index, row in df_clean.iterrows()]

# A√±adir HeatMap (requisito: usar folium.plugins.HeatMap)
HeatMap(
    heat_data,
    name='Densidad de Incendios',
    min_opacity=0.3,
    max_zoom=15,
    radius=15,
    blur=15,
    gradient={0.4: 'blue', 0.65: 'lime', 1: 'red'}
).add_to(mapa1)

# A√±adir t√≠tulo
title_html = '''
<div style="position: fixed; 
            top: 10px; left: 50px; width: 350px;
            background-color: white; padding: 10px;
            border: 2px solid grey; z-index: 9999;
            font-size: 14px;">
<b>üî• MAPA 1: Densidad de Incendios (HeatMap)</b><br>
√Åreas rojas = Mayor concentraci√≥n de incendios
</div>
'''
mapa1.get_root().html.add_child(folium.Element(title_html))

# Guardar mapa
mapa1.save('mapa1_heatmap.html')
print("‚úÖ Mapa 1 guardado como 'mapa1_heatmap.html'")
print(f"   - Puntos en HeatMap: {len(heat_data)}")
print(f"   - Radio: 15, Blur: 15, Opacidad m√≠nima: 0.3")

# Mostrar mapa
mapa1

# %%
# =============================================================================
# MAPA 2: MARCADORES INDIVIDUALES CON POPUPS - REQUISITO PRINCIPAL
# =============================================================================

print("\n" + "="*60)
print("üìç CREANDO MAPA 2: MARCADORES INDIVIDUALES CON POPUPS")
print("="*60)

# Crear mapa base
mapa2 = folium.Map(
    location=[df_clean['latitude'].mean(), df_clean['longitude'].mean()],
    zoom_start=6,
    control_scale=True,
    tiles='OpenStreetMap'
)

# Para mejor rendimiento, usar solo 200 puntos si hay muchos
if len(df_clean) > 200:
    muestra = df_clean.sample(200, random_state=42)
else:
    muestra = df_clean

print(f"üìç Mostrando {len(muestra)} marcadores (para mejor rendimiento)")

# Funci√≥n para crear icono de fuego (requisito: icono fire)
def crear_icono_fuego(color):
    """Crea icono de fuego con color espec√≠fico (requisito Mapa 2)"""
    return folium.Icon(
        color=color,
        icon='fire',
        prefix='fa'
    )

# A√±adir marcadores individuales (requisito: usar Marker)
for index, row in muestra.iterrows():
    # Crear popup (requisito: popups con informaci√≥n)
    popup_text = f"""
    <div style="font-family: Arial; font-size: 12px;">
    <b>üî• Informaci√≥n del Incendio</b><br>
    <hr style="margin: 5px 0;">
    <b>Intensidad:</b> {row['intensidad']}<br>
    <b>Brightness:</b> {row['brightness']:.1f}<br>
    <b>Sat√©lite:</b> {row['satellite']}<br>
    <b>Coordenadas:</b><br>
    Lat: {row['latitude']:.4f}<br>
    Lon: {row['longitude']:.4f}
    </div>
    """
    
    popup = folium.Popup(popup_text, max_width=300)
    
    # Crear marcador con icono de fuego y color seg√∫n brightness (REQUISITO)
    folium.Marker(
        location=[row['latitude'], row['longitude']],
        popup=popup,
        icon=crear_icono_fuego(row['color']),  # REQUISITO: color seg√∫n brightness
        tooltip=f"Intensidad: {row['intensidad']} ({row['brightness']:.1f})"
    ).add_to(mapa2)

# A√±adir t√≠tulo
title_html = '''
<div style="position: fixed; 
            top: 10px; left: 50px; width: 400px;
            background-color: white; padding: 10px;
            border: 2px solid grey; z-index: 9999;
            font-size: 14px;">
<b>üìç MAPA 2: Incendios por Intensidad</b><br>
üî¥ Rojo: Alta intensidad (brightness > 400)<br>
üü† Naranja: Media intensidad (350-400)<br>
üü° Amarillo: Baja intensidad (< 350)
</div>
'''
mapa2.get_root().html.add_child(folium.Element(title_html))

# Guardar mapa
mapa2.save('mapa2_marcadores.html')
print("‚úÖ Mapa 2 guardado como 'mapa2_marcadores.html'")
print(f"   - Marcadores: {len(muestra)} con iconos de fuego")
print(f"   - Colores seg√∫n brightness: Amarillo/Naranja/Rojo")

# Mostrar mapa
mapa2

# %%
# =============================================================================
# MAPA 3: AGRUPACI√ìN CON MARKERCLUSTER - REQUISITO PRINCIPAL
# =============================================================================

print("\n" + "="*60)
print("üë• CREANDO MAPA 3: AGRUPACI√ìN CON MARKERCLUSTER")
print("="*60)

# Crear mapa base
mapa3 = folium.Map(
    location=[df_clean['latitude'].mean(), df_clean['longitude'].mean()],
    zoom_start=5,  # Zoom m√°s alejado para ver clusters
    control_scale=True,
    tiles='OpenStreetMap'
)

# Crear MarkerCluster (REQUISITO: usar MarkerCluster)
marker_cluster = MarkerCluster(
    name="Incendios Agrupados",
    options={
        'maxClusterRadius': 50,
        'disableClusteringAtZoom': 12
    }
).add_to(mapa3)

# A√±adir marcadores al cluster
for index, row in df_clean.iterrows():
    popup_text = f"""
    <div style="font-family: Arial; font-size: 12px;">
    <b>üî• Incendio Agrupado</b><br>
    <hr style="margin: 5px 0;">
    <b>Intensidad:</b> {row['intensidad']}<br>
    <b>Brightness:</b> {row['brightness']:.1f}<br>
    <b>Sat√©lite:</b> {row['satellite']}
    </div>
    """
    
    popup = folium.Popup(popup_text, max_width=300)
    
    folium.Marker(
        location=[row['latitude'], row['longitude']],
        popup=popup,
        icon=crear_icono_fuego(row['color']),
        tooltip=f"Intensidad: {row['intensidad']}"
    ).add_to(marker_cluster)

# A√±adir t√≠tulo
title_html = '''
<div style="position: fixed; 
            top: 10px; left: 50px; width: 400px;
            background-color: white; padding: 10px;
            border: 2px solid grey; z-index: 9999;
            font-size: 14px;">
<b>üë• MAPA 3: Agrupaci√≥n con MarkerCluster</b><br>
‚Ä¢ Los c√≠rculos agrupan m√∫ltiples incendios<br>
‚Ä¢ Haz clic para acercar y ver incendios individuales<br>
‚Ä¢ Zoom in para desagrupar autom√°ticamente
</div>
'''
mapa3.get_root().html.add_child(folium.Element(title_html))

# Guardar mapa
mapa3.save('mapa3_cluster.html')
print("‚úÖ Mapa 3 guardado como 'mapa3_cluster.html'")
print(f"   - Incendios agrupados: {len(df_clean)}")
print(f"   - Radio m√°ximo del cluster: 50px")
print(f"   - Desagrupa en zoom: 12")

# Mostrar mapa
mapa3

# %%
# =============================================================================
# MAPA 4: CONTROL DE CAPAS POR SAT√âLITE - REQUISITO PRINCIPAL
# =============================================================================

print("\n" + "="*60)
print("üõ∞Ô∏è CREANDO MAPA 4: CONTROL DE CAPAS POR SAT√âLITE")
print("="*60)

# Crear mapa base
mapa4 = folium.Map(
    location=[df_clean['latitude'].mean(), df_clean['longitude'].mean()],
    zoom_start=6,
    control_scale=True,
    tiles='OpenStreetMap'
)

# REQUISITO: Crear FeatureGroup para cada sat√©lite
aqua_group = folium.FeatureGroup(name='Sat√©lite Aqua', show=True)
terra_group = folium.FeatureGroup(name='Sat√©lite Terra', show=True)

# Colores para cada sat√©lite (requisito: colores diferentes)
colores_satelite = {
    'Aqua': 'blue',
    'Terra': 'green'
}

# Contadores
cont_aqua = 0
cont_terra = 0

# A√±adir incendios a los grupos correspondientes
for index, row in df_clean.iterrows():
    satelite = row['satellite']
    color = colores_satelite.get(satelite, 'gray')
    
    popup_text = f"""
    <div style="font-family: Arial; font-size: 12px;">
    <b>üõ∞Ô∏è Detecci√≥n por Sat√©lite</b><br>
    <hr style="margin: 5px 0;">
    <b>Sat√©lite:</b> {satelite}<br>
    <b>Intensidad:</b> {row['intensidad']}<br>
    <b>Brightness:</b> {row['brightness']:.1f}<br>
    <b>Coordenadas:</b><br>
    Lat: {row['latitude']:.4f}<br>
    Lon: {row['longitude']:.4f}
    </div>
    """
    
    popup = folium.Popup(popup_text, max_width=300)
    
    marcador = folium.Marker(
        location=[row['latitude'], row['longitude']],
        popup=popup,
        icon=folium.Icon(color=color, icon='satellite', prefix='fa'),
        tooltip=f"Sat√©lite: {satelite}"
    )
    
    # A√±adir al grupo correspondiente (REQUISITO: FeatureGroup por sat√©lite)
    if satelite == 'Aqua':
        marcador.add_to(aqua_group)
        cont_aqua += 1
    elif satelite == 'Terra':
        marcador.add_to(terra_group)
        cont_terra += 1

# A√±adir los FeatureGroup al mapa
aqua_group.add_to(mapa4)
terra_group.add_to(mapa4)

# REQUISITO: Agregar control de capas
folium.LayerControl(collapsed=False).add_to(mapa4)

# A√±adir t√≠tulo
title_html = '''
<div style="position: fixed; 
            top: 10px; left: 50px; width: 400px;
            background-color: white; padding: 10px;
            border: 2px solid grey; z-index: 9999;
            font-size: 14px;">
<b>üõ∞Ô∏è MAPA 4: Control por Sat√©lite</b><br>
‚Ä¢ Usa el control de capas (arriba-derecha)<br>
‚Ä¢ Activa/desactiva Aqua (azul) y Terra (verde)<br>
‚Ä¢ üîµ Aqua: {aqua_count} incendios<br>
‚Ä¢ üü¢ Terra: {terra_count} incendios
</div>
'''.replace('{aqua_count}', str(cont_aqua)).replace('{terra_count}', str(cont_terra))

mapa4.get_root().html.add_child(folium.Element(title_html))

# Guardar mapa
mapa4.save('mapa4_satelite.html')
print("‚úÖ Mapa 4 guardado como 'mapa4_satelite.html'")
print(f"   - Incendios Aqua: {cont_aqua} (azul)")
print(f"   - Incendios Terra: {cont_terra} (verde)")
print(f"   - Control de capas: Activado")

# Mostrar mapa
mapa4

# %%
# =============================================================================
# MAPA 5: CONTROL DE CAPAS POR INTENSIDAD - REQUISITO PRINCIPAL
# =============================================================================

print("\n" + "="*60)
print("üé® CREANDO MAPA 5: CONTROL DE CAPAS POR INTENSIDAD")
print("="*60)

# Crear mapa base
mapa5 = folium.Map(
    location=[df_clean['latitude'].mean(), df_clean['longitude'].mean()],
    zoom_start=6,
    control_scale=True,
    tiles='OpenStreetMap'
)

# REQUISITO: Crear FeatureGroup para cada color/intensidad
amarillo_group = folium.FeatureGroup(name='Baja Intensidad (Amarillo)', show=True)
naranja_group = folium.FeatureGroup(name='Media Intensidad (Naranja)', show=True)
rojo_group = folium.FeatureGroup(name='Alta Intensidad (Rojo)', show=True)

# Contadores
cont_amarillo = 0
cont_naranja = 0
cont_rojo = 0

# A√±adir incendios a los grupos correspondientes
for index, row in df_clean.iterrows():
    color = row['color']
    
    popup_text = f"""
    <div style="font-family: Arial; font-size: 12px;">
    <b>üé® Nivel de Intensidad</b><br>
    <hr style="margin: 5px 0;">
    <b>Color:</b> {row['intensidad']}<br>
    <b>Brightness:</b> {row['brightness']:.1f}<br>
    <b>Sat√©lite:</b> {row['satellite']}<br>
    <b>Umbrales:</b><br>
    ‚Ä¢ Amarillo: brightness < 350<br>
    ‚Ä¢ Naranja: 350 ‚â§ brightness < 400<br>
    ‚Ä¢ Rojo: brightness ‚â• 400
    </div>
    """
    
    popup = folium.Popup(popup_text, max_width=300)
    
    marcador = folium.Marker(
        location=[row['latitude'], row['longitude']],
        popup=popup,
        icon=crear_icono_fuego(color),
        tooltip=f"Intensidad: {row['intensidad']} ({row['brightness']:.1f})"
    )
    
    # A√±adir al grupo correspondiente (REQUISITO: capas por color)
    if color == 'yellow':
        marcador.add_to(amarillo_group)
        cont_amarillo += 1
    elif color == 'orange':
        marcador.add_to(naranja_group)
        cont_naranja += 1
    elif color == 'red':
        marcador.add_to(rojo_group)
        cont_rojo += 1

# A√±adir los FeatureGroup al mapa
amarillo_group.add_to(mapa5)
naranja_group.add_to(mapa5)
rojo_group.add_to(mapa5)

# REQUISITO: Agregar control de capas
folium.LayerControl(collapsed=False).add_to(mapa5)

# A√±adir t√≠tulo con leyenda
title_html = '''
<div style="position: fixed; 
            top: 10px; left: 50px; width: 450px;
            background-color: white; padding: 10px;
            border: 2px solid grey; z-index: 9999;
            font-size: 14px;">
<b>üé® MAPA 5: Control por Intensidad (Brightness)</b><br>
‚Ä¢ Usa el control de capas para filtrar<br>
‚Ä¢ üü° Amarillo (Baja): brightness < 350<br>
‚Ä¢ üü† Naranja (Media): 350 ‚â§ brightness < 400<br>
‚Ä¢ üî¥ Rojo (Alta): brightness ‚â• 400<br>
‚Ä¢ üî• Iconos: fire (FontAwesome)
</div>
'''
mapa5.get_root().html.add_child(folium.Element(title_html))

# A√±adir contadores
contadores_html = f'''
<div style="position: fixed; 
            bottom: 50px; left: 50px; width: 200px;
            background-color: white; padding: 10px;
            border: 2px solid grey; z-index: 9999;
            font-size: 12px;">
<b>üìä Contadores por Intensidad</b><br>
üü° Amarillo: {cont_amarillo}<br>
üü† Naranja: {cont_naranja}<br>
üî¥ Rojo: {cont_rojo}<br>
<hr style="margin: 5px 0;">
<b>Total:</b> {cont_amarillo + cont_naranja + cont_rojo}
</div>
'''
mapa5.get_root().html.add_child(folium.Element(contadores_html))

# Guardar mapa
mapa5.save('mapa5_intensidad.html')
print("‚úÖ Mapa 5 guardado como 'mapa5_intensidad.html'")
print(f"   - Amarillo (baja): {cont_amarillo} incendios")
print(f"   - Naranja (media): {cont_naranja} incendios")
print(f"   - Rojo (alta): {cont_rojo} incendios")
print(f"   - Control de capas: Activado")

# Mostrar mapa
mapa5

